<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <!-- Base shape -->
            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:topRightRadius="400dp"
                        android:topLeftRadius="400dp" />
                    <solid android:color="#C9DCDEE4" />
                </shape>
            </item>
            <!-- Smaller overlay shape with insets -->
            <item android:top="50dp">
                <shape android:shape="rectangle">
                    <corners
                        android:topRightRadius="400dp"
                        android:topLeftRadius="400dp" />
                    <solid android:color="#70AAABAF" /> <!-- Semi-transparent overlay color -->
                </shape>
            </item>

            <item android:top="150dp">
                <shape android:shape="rectangle">
                    <corners
                        android:topRightRadius="350dp"
                        android:topLeftRadius="350dp" />
                    <solid android:color="#101f41" /> <!-- Semi-transparent overlay color -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>